{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier"
  ],
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "include",
        "mixin",
        "extend",
        "if",
        "each",
        "content",
        "import",
        "for",
        "else",
        "at-root",
        "function",
        "return"
      ]
    }],
    "no-descending-specificity": null,
    "function-calc-no-invalid": null,
    "unicode-bom": "never"
  }
}
